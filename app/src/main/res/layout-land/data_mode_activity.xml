<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/buttonsRelLay">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataModeRadioGroup"
            android:layout_centerInParent="true">

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="BYTE"
            android:layout_centerHorizontal="true"
            android:id="@+id/byteModeRadioBtn"
            android:textSize="30dp"
            android:textColor="@drawable/radio_button_text"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="WORD"
            android:layout_centerHorizontal="true"
            android:id="@+id/wordModeRadioBtn"
            android:layout_below="@+id/byteModeRadioBtn"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textColor="@drawable/radio_button_text"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="DWORD"
            android:layout_centerHorizontal="true"
            android:id="@+id/dwordModeRadioBtn"
            android:layout_below="@+id/wordModeRadioBtn"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textColor="@drawable/radio_button_text"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="QWORD"
            android:layout_centerHorizontal="true"
            android:id="@+id/qwordModeRadioBtn"
            android:layout_below="@+id/dwordModeRadioBtn"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textColor="@drawable/radio_button_text"
            android:background="@drawable/radio_selector"
            android:checked="true"
            android:button="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        </RadioGroup>

</RelativeLayout>